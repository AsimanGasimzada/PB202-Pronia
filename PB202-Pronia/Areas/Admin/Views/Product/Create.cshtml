@model ProductCreateViewModel

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">
                Filial yarat
            </p>
            <form method="post" class="forms-sample" enctype="multipart/form-data">

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>



                <div class="form-group">
                    <label for="exampleInputUsername1"> Name</label>
                    <input class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>



                <div class="form-group">
                    <label for="exampleInputUsername1"> Description</label>
                    <input class="form-control" asp-for="Description">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="exampleInputUsername1"> Price</label>
                    <input min="1" type="number" class="form-control" asp-for="Price">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label for="exampleInputUsername1"> Main Image</label>
                    <input class="form-control" asp-for="MainImage">
                    <span asp-validation-for="MainImage" class="text-danger"></span>
                </div>



                <div class="form-group">
                    <label for="exampleInputUsername1"> Hover Image</label>
                    <input class="form-control" asp-for="HoverImage">
                    <span asp-validation-for="HoverImage" class="text-danger"></span>
                </div>





                <div class="form-group">
                    <label for="exampleInputUsername1"> Additional Image</label>
                    <input class="form-control" asp-for="AdditionalImages">
                    <span asp-validation-for="AdditionalImages" class="text-danger"></span>
                </div>



                <div class="form-group">
                    <label for="exampleInputUsername1"> Category</label>
                    <select asp-for="CategoryId">
                        <option disabled selected> Choose Category</option>
                        @foreach (Category category in ViewBag.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>




                <div class="form-group">
                    <label for="exampleInputUsername1"> Tag</label>
                    <select asp-for="TagIds">
                        @foreach (Tag tag in ViewBag.Tags)
                        {
                            <option value="@tag.Id">@tag.Name</option>
                        }
                    </select>
                    <span asp-validation-for="TagIds" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary mr-2">Yarat</button>
                <a class="btn btn-light" asp-action="Index">Ləğv et</a>
            </form>
        </div>
    </div>
</div>

