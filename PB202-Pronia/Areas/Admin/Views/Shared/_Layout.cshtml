</head>
<body>
    <div class="container-scroller">

        <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-start">
                <a class="navbar-brand brand-logo me-5" asp-action="index" asp-controller="Home" asp-area="@null"><img src="~/assets/img/logo.png" class="me-2" alt="logo" /></a>
                <a class="navbar-brand brand-logo-mini" asp-action="index" asp-controller="Home" asp-area="@null"><img src="~/assets/img/logo.png" alt="logo" /></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="icon-menu"></span>
                </button>

            </div>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Dashboard">
                            <i class="icon-grid menu-icon"></i>
                            <span class="menu-title">İdarə Paneli</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="collapse" href="#ui-basic" aria-expanded="false" aria-controls="ui-basic">
                            <i class="icon-layout menu-icon"></i>
                            <span class="menu-title">Səhifələr</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse" id="ui-basic">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item"> <a class="nav-link" asp-action="Index" asp-controller="Subscriber">Abunəçilər</a></li>
                                <li class="nav-item"> <a class="nav-link" asp-action="Index" asp-controller="Slider">Slaydlar</a></li>
                                <li class="nav-item"> <a class="nav-link" asp-action="Index" asp-controller="About">Haqqında</a></li>
                                <li class="nav-item"> <a class="nav-link" asp-action="Index" asp-controller="Attendance">Servislər</a></li>
                                <li class="nav-item"> <a class="nav-link" asp-action="Index" asp-controller="Setting">Parametrlər</a></li>
                                <li class="nav-item"> <a class="nav-link" asp-action="Index" asp-controller="Brand">Partnyorlar</a></li>
                                <li class="nav-item"> <a class="nav-link" asp-action="Index" asp-controller="Advertisement">Reklamlar</a></li>
                                <li class="nav-item"> <a class="nav-link" asp-action="Index" asp-controller="Branch">Filiallar</a></li>
                                <li class="nav-item"> <a class="nav-link" asp-action="Index" asp-controller="Category">Kateqoriyalar</a></li>
                                <li class="nav-item"> <a class="nav-link" asp-action="Index" asp-controller="Product">Məhsullar</a></li>
                                <li class="nav-item"> <a class="nav-link" asp-action="Index" asp-controller="Order">Sifarişlər</a></li>
                            </ul>
                        </div>
                    </li>



                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="collapse" href="#form-elements" aria-expanded="false" aria-controls="form-elements">
                            <i class="mdi mdi-layers menu-icon"></i>
                            <span class="menu-title">Servislər</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse" id="form-elements">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item"> <a class="nav-link" asp-action="Index" asp-controller="Email">Email Göndər</a></li>

                            </ul>
                        </div>
                    </li>


                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="collapse" href="#auth" aria-expanded="false" aria-controls="auth">
                            <i class="icon-head menu-icon"></i>
                            <span class="menu-title">@(User.Identity?.Name ?? "Admin")</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse" id="auth">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item"> <a class="nav-link" asp-action="Logout" asp-controller="Account" asp-area="@null"> Çıxış et </a></li>
                                <li class="nav-item"> <a class="nav-link" asp-action="Index" asp-controller="Home" asp-area="@null"> Əsas səhifə </a></li>
                            </ul>
                        </div>
                    </li>

                </ul>
            </nav>
            @RenderBody()

        </div>
        <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script>
        const deleteBtns = document.querySelectorAll(".deleteBtn");

        deleteBtns.forEach(btn => {
            btn.addEventListener('click', (e) => {
                e.preventDefault();


                Swal.fire({
                    title: 'Əminsiniz?',
                    text: "Sildikdən sonra geri qaytarmaq mümkün olmayacaq!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Əminəm, sil!',
                    cancelButtonText: 'Ləğv et'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // fetch(btn.href)
                        // btn.parentElement.parentElement.remove();  //you need to change the order number of the element
                        window.location.href = btn.href
                    }
                })
            })
        })


    </script>

    <script type="importmap">
        {
            "imports": {
                "ckeditor5": "https://cdn.ckeditor.com/ckeditor5/43.2.0/ckeditor5.js",
                "ckeditor5/": "https://cdn.ckeditor.com/ckeditor5/43.2.0/"
            }
        }
    </script>


    <script src="~/admin/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="~/admin/vendors/chart.js/chart.umd.js"></script>
    <script src="~/admin/vendors/datatables.net/jquery.dataTables.js"></script>
    <!-- <script src="~/admin/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script> -->
    <script src="~/admin/vendors/datatables.net-bs5/dataTables.bootstrap5.js"></script>
    <script src="~/admin/js/dataTables.select.min.js"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/admin/js/off-canvas.js"></script>
    <script src="~/admin/js/template.js"></script>
    <script src="~/admin/js/settings.js"></script>
    <script src="~/admin/js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="~/admin/js/jquery.cookie.js" type="text/javascript"></script>
    <script src="~/admin/js/dashboard.js"></script>
    <script src="~/admin/js/chosen.jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>



    <script>
        window.addEventListener('scroll', () => {
                sessionStorage.setItem(`scrollPositionAdmin-${window.location.pathname}`, window.scrollY);

        });

        window.addEventListener('load', () => {
            const scrollPosition = sessionStorage.getItem(`scrollPositionAdmin-${window.location.pathname}`);
            if (scrollPosition) {
                window.scrollTo(0, parseInt(scrollPosition, 10));
            }
        });
    </script>

    <!-- <script src="~/admin/js/Chart.roundedBarCharts.js"></script> -->
    <!-- End custom js for this page-->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>