@model List<Product>
@{
    int count = 1;
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">


            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Products</h4>
                        <p class="card-description">
                            <a asp-action="Create" class="btn btn-success">Create</a>
                        </p>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            #
                                        </th>
                                        <th>
                                            Image
                                        </th>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Description
                                        </th>
                                        <th>
                                            Actions
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model)
                                    {
                                        <tr>
                                            <td class="py-1">
                                                @(count++)
                                            </td>

                                            <td>
                                                <img src="~/assets/images/website-images/@product.ProductImages.FirstOrDefault(x => x.Status==true)?.Url" />
                                            </td>
                                            <td>
                                                @product.Name
                                            </td>

                                            <td>
                                                @product.Description
                                            </td>

                                            <td>
                                                <a asp-action="Detail" asp-route-id="@product.Id" class="btn btn-primary"><i class="mdi mdi-grease-pencil"></i></a>
                                                <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning"><i class="mdi mdi-grease-pencil"></i></a>
                                                <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger deleteBtn"><i class="mdi mdi-delete"></i></a>
                                            </td>

                                        </tr>

                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
